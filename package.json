{
  "name": "git-hooks-nodejs",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "success-message": "echo Thanks for comitting $GIT_AUTHOR_NAME"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "husky": "^4.3.8",
    "i": "^0.3.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "post-commit": "npm run success-message"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint",
      "jest --findRelatedTests"
    ]
  },
  "commitlint":{
    "rules":{
      "references-empty": [2,"never"]
    },
    "parserPreset":{
      "parserOpts":{
        "issuePrefixes": ["ISSUE-"]
      }
    }
  }
}
